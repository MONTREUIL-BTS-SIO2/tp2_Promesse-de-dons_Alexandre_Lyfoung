{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Promesse de Don</h1>

    <h2>Accueil</h2>
    <a href="{{ path('app_login') }}" class="btn btn-lg btn-primary" type="button">Login</a>
    <a href="{{ path('app_campagne_index') }}" class="btn btn-lg btn-secondary" role="button">Campagne</a>
    {% if is_granted('ROLE_USER')%}
        <a href="{{ path('app_promesse_don_index') }}" class="btn btn-lg btn-info" role="button">Don</a>
        <a href="{{ path('app_logout') }}" class="btn btn-lg btn-primary" role="button">Logout</a>
    {% endif %}
</div>
{% endblock %}

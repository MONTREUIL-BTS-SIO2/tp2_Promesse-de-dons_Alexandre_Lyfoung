{% extends 'base.html.twig' %}

{% block title %}Campagne Visualisation{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <h1 class="diplay-1 text-center">Campagne</h1>
        </div>
        <div class="row">
            <table class="table table-striped table-bordered">
                <tbody>
                <tr>
                    <th class="text-center">Id</th>
                    <td class="text-center">{{ campagne.id }}</td>
                </tr>
                <tr>
                    <th class="text-center">Nom</th>
                    <td class="text-center">{{ campagne.nom }}</td>
                </tr>
                <tr>
                    <th class="text-center">Description</th>
                    <td class="text-center">{{ campagne.description }}</td>
                </tr>
                <tr>
                    <th class="text-center">Montant des Dons Non payés</th>
                    <td class="text-center">{{ donsNonHonores[0].MontantDonAttente }} €</td>
                </tr>
                <tr>
                    <th class="text-center">Montant des Dons payés</th>
                    <td class="text-center">{{ donsHonores[0].MontantPaye }} €</td>
                </tr>
                <tr>
                    <th class="text-center">Pourcentage</th>
                    <td class="text-center">{{ conversion}}% </td>
                </tr>
                </tbody>
            </table>
        </div>
        <a href="{{ path('app_campagne_index') }}" class="btn btn-primary" type="button">Retour</a>
        <a href="{{ path('app_campagne_edit', {'id': campagne.id}) }}" class="btn btn-primary float-end" type="button">Modifier</a>

    </div>


{% endblock %}

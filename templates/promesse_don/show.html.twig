{% extends 'base.html.twig' %}

{% block title %}Visualiser la Promesse de Don{% endblock %}

{% block body %}
    <h1>PromesseDon</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ promesse_don.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ promesse_don.email }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ promesse_don.prenom }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ promesse_don.nom }}</td>
            </tr>
            <tr>
                <th>MontantDon</th>
                <td>{{ promesse_don.montantDon }}</td>
            </tr>
            <tr>
                <th>DateDeCreation</th>
                <td>{{ promesse_don.dateDeCreation ? promesse_don.dateDeCreation|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DateHonore</th>
                <td>{{ promesse_don.dateHonore ? promesse_don.dateHonore|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_promesse_don_index_id', {'id': campagne_id})}}" class="btn btn-secondary" type="button">Retour</a>

    <a href="{{ path('app_promesse_don_edit', {'id': promesse_don.id}) }}" class="btn btn-primary" type="button">Modifier</a>


{% endblock %}
